<% if flash[:error] %>
  <p style="color: red">Error: <%= flash[:error] %></p>
<% end %>

<h1>Listing colos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Map</th>

  </tr>

<% for colo in @colos %>
  <tr class=<%= cycle('row_odd','row_even')%> >
    <td>
      <%= link_to '[x]', colo, :confirm => 'Are you sure?', :method => :delete %>
      <%= link_to colo.name, edit_colo_path(colo) %>
    </td>
    <td><%=h colo.description %></td>
    <td><%= link_to 'view', :id => colo, :action => "build_map"%></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New colo', new_colo_path %>
