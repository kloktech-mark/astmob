<h1>Listing storages</h1>

<table>
  <tr>
    <th>name</th>
    <th>Raid type</th>
    <th>Controller</th>
    <th>Enclosure</th>
    <th>Os</th>
    <th>Disk Count</th>
  </tr>

<% for storage in @storages %>
  <tr>
    <td>
      <%= link_to '[X]', storage, :confirm => 'Are you sure?', :method => :delete %>
      <%= link_to storage.asset.name, edit_storage_path(storage) %></td>
    <td><%=h storage.raid_type %></td>
    <td><%=h storage.controller %></td>
    <td><%=h storage.enclosure %></td>
    <td><%=h storage.os %></td>
    <td><%=h storage.asset.disk_count %></td>
    <td></td>
  </tr>
<% end %>
</table>

<br />

