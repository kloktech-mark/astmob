<h1>Editing network</h1>

<%= error_messages_for :network %>

<% form_for(@network) do |f| %>
  <%= render (:partial => "assets/mini_edit", :object => @network.asset) %>
  
  <%= render (:partial => "interfaces/mini_edit", :object => @network.asset) %>


  <p>
    <b>Network model</b><br />
    <%= f.collection_select( "network_model_id", NetworkModel.find(:all), "id", "name") %>
  </p>


  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @network %> |
<%= link_to 'Back', networks_path %>
