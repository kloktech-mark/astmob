<h1>Search result for "<%= @s[:search] %>".

<% if  @results.nil? || @results.total < 1 %>
No Asset Found</h1>
<% else %>

  <!-- faceted browsing.
  <% #@results.facets["facet_fields"]["colo_id_facet"].each { |key, value| %>
      <%#= Colo.find(key).name %>(<%#= value%>)
  <%# } %>
  -->
  Found <%= @results.records.length %> assets.</h1>
  
  <table>
    <tr>
      <th>Name</th>
      <th>Colo</th>
      <th>Type</th>
  
    </tr>
  
  <% @results.records.each do |a| %>

    <% if ! a.nil?%>
      <% if a.respond_to?('asset') %>
        <% a = a.asset%>
        
      <% end %>
      <tr>
        <td><%= link_to a.name, edit_polymorphic_path(a.resource) %></td>

        <!-- <td><%=h a.name %></td> -->
        <td><%=h a.colo.name rescue nil %></td>
        <td><%=h a.resource_type %></td>    
        <!--
        <td><%= link_to 'Show', a.resource %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path(a.resource) %></td>
        <td><%= link_to 'Destroy', url_for( :controller => a.resource_type.pluralize, :action => 'destroy', :id => a.resource_id), :confirm => 'Are you sure?' %></td>
        -->
      </tr>
    <% end %>
  <% end %>
  
  </table>
<% end %>
