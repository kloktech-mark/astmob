<h1>New video</h1>

<%= error_messages_for :video %>

<% form_for(@video) do |f| %>

  <%= render(:partial => "assets/mini_new", :object => @video.asset) %>

  <p>
    <b>Video model</b><br />
    <%= f.collection_select( "video_model_id", VideoModel.find(:all), "id", "collection_name") %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', videos_path %>
