<h1>New vip</h1>

<%= error_messages_for :vip %>

<% form_for(@vip) do |f| %>

  <%= render (:partial => "assets/mini_new_name_only", :object => @vip.asset) %>

  <p>
    <b>Hosting Server</b><br />
    <%= f.collection_select(:hoster_id, Asset.find(:all, :conditions => "resource_type = 'Server'", :order => :name), "id", "name") %>
  </p>

  <p>
    <b>Proto</b><br />
    <%= f.select :proto, Vip::PROTOS %>
  </p>
  
  <p>
    <b>Port</b><br />
    <%= f.text_field :port , :size => '5'%>
  </p>
  
      
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
